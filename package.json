{
	"name": "kubernetesapply",
	"displayName": "Kubernetes Apply",
	"description": "Apply and Delete Kubernetes resource files",
	"version": "0.0.1",
	"publisher": "ShaiMendel",
	"keywords": ["kubernetes", "apply", "yaml", "kubectl"],
	"icon": "images/apply.png",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:kubernetesapply.create",
		"onCommand:kubernetesapply.apply",
		"onCommand:kubernetesapply.delete"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "kubernetesapply.create",
				"title": "K8S: Create resource"
			},
			{
				"command": "kubernetesapply.apply",
				"title": "K8S: Apply resource"
			},
			{
				"command": "kubernetesapply.delete",
				"title": "K8S: Delete resource"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "kubernetesapply.create",
					"group": "kubernetesapplygroup@1",
					"when": "resourceExtname == .yaml || resourceExtname == .yml"
				},
				{
					"command": "kubernetesapply.apply",
					"group": "kubernetesapplygroup@1",
					"when": "resourceExtname == .yaml || resourceExtname == .yml"
				},
				{
					"command": "kubernetesapply.delete",
					"group": "kubernetesapplygroup@2",
					"when": "resourceExtname == .yaml || resourceExtname == .yml"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": ""
	},
	"devDependencies": {
		"@semantic-release/github": "^7.0.5",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.43.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"release": {
		"branches": "master",
		"verifyConditions": [
			"@semantic-release/github"
		],
		"publish": [
			"@semantic-release/github"
		],
		"success": [
			"@semantic-release/github"
		],
		"fail": [
			"@semantic-release/github"
		]
	},
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/shaimendel/vscode-plugin-cicd-github-actions.git"
  }
}
